@model CoachViewModel


<tr class="js-row-@Model.Id">
  
    <td class="w-25">
       
            <img src="~/images/thumbs/small/@Model.MainImage" alt=""  class="img img-thumbnail w-50"/>
       
    </td>

    <td>@Model.Name</td>
    <td>@Model.Email</td>
    <td>
        <span class="badge badge-light-@(Model.IsActive ? "success" : "danger")">
            @(Model.IsActive ? "نشط" : "غير نشط")


        </span>
    </td>
    <td>@Model.CreatedAt.ToString()</td>
    <td>

        <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary " data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
            <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
            <span class="svg-icon svg-icon-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                        <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                        <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                        <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                    </g>
                </svg>
            </span>
            <!--end::Svg Icon-->
        </button>

        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
            <!--begin::Heading-->
            <div class="menu-item px-3">
                <div class="menu-content text-muted pb-2 px-3 fs-7 text-uppercase">
                    العمليات
                </div>
            </div>
            <!--end::Heading-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a  asp-action="Edit" asp-controller="Coaches" asp-route-id="@Model.Id" class="menu-link px-3" >
                    تعديل 
                </a>
            </div>
            <!--end::Menu item-->
  
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3 js-toggle-btn" data-id="@Model.Id">
                   تغير الحالة
                </a>
            </div>
            <!--end::Menu item-->  
          <!--begin::Menu item-->
            <div class="menu-item px-3">
               
                <form id="js-deleteCoachForm-@Model.Id" asp-action="DeleteCoach" method="post" asp-controller="Coaches" class="d-none">
                    <input type="hidden" name="id" value="@Model.Id"/>
                </form>

                <a href="#" class="menu-link px-3 js-delete-btn" data-id="@Model.Id">
                    حذف
                </a>
            </div>
            <!--end::Menu item-->

        </div>

    </td>
</tr>
