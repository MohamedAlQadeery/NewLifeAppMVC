                        </svg>
                    </span>
                    <!--end::Svg Icon-->
            </div>
        </div>
        <!--begin::Content-->
        <div class="d-flex flex-column pe-0 pe-sm-10">
            <h5 class="mb-1">اضافة مدرب</h5>
        </div>
        <!--end::Content-->
    </div>
</div>


<!--Start Form Content-->

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-controller="Coaches" asp-action="Create" enctype="multipart/form-data">
           
           
        <div class="row ">
            <div class="col-md-12">
                    <!--begin::Image input-->
                    <div class="image-input image-input-empty mb-5" data-kt-image-input="true"
                         style="background-image: url(/assets/admin/images/image-placeholder.jpg)">
                        <!--begin::Image preview wrapper-->
                        <div class="image-input-wrapper w-200px h-250px"></div>
                        <!--end::Image preview wrapper-->
                        <!--begin::Edit button-->
                        <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                               data-kt-image-input-action="change"
                               data-bs-dismiss="click"
                    <i class="bi bi-pencil-fill fs-7"></i>

                    <!--begin::Inputs-->
                    <input type="file" asp-for="MainImage" accept=".png, .jpg, .jpeg" />
                    <input type="hidden" name="avatar_remove" />
                    <!--end::Inputs-->
                </label>
                        <!--end::Edit button-->
                        <!--begin::Cancel button-->
                        <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                              data-kt-image-input-action="cancel"
                              data-bs-dismiss="click"
                    <i class="bi bi-x fs-2"></i>
                </span>
                        <!--end::Cancel button-->
                        <!--begin::Remove button-->
                        <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                              data-kt-image-input-action="remove"
                              data-bs-dismiss="click"
                    <i class="bi bi-x fs-2"></i>
                </span>
                        <!--end::Remove button-->
                    </div>

                    <span asp-validation-for="MainImage" class="text-danger d-block"></span>

                    <!--end::Image input-->

            </div>
        </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="اسم المدرب" asp-for="Name" />
                            <label asp-for="Name"></label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger d-block"></span>
                    </div>
                </div>
            </div> 
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="البريد الالكتروني" asp-for="Email" />
                            <label asp-for="Email"></label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger d-block"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="رقم الهاتف" asp-for="PhoneNumber" />
                            <label asp-for="PhoneNumber"></label>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>
                    </div>
                </div>
            </div>
            
        
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <textarea class="form-control" placeholder="نبذة عن المدرب" asp-for="Description"></textarea>
                            <label asp-for="Description"></label>
                        </div>
                        <span asp-validation-for="Description" class="text-danger d-block"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <span class="indicator-label">
                    اضافة
                </span>
                <span class="indicator-progress">
                    الرجاء الانتظار ... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </form>
    </div>
</div>
<!--End Form Content-->


@section Scripts{
   <partial name="_ValidationScriptsPartial" />

}